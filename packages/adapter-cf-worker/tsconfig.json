{
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"paths": {
			"~/*": ["./src/*"]
		},

		// so that if your project isn't using TypeScript, it still has autocomplete
		"allowJs": true,

		"outDir": "dist/"
	},
	"include": ["src/**/*", "src/.d.ts"],
	"exclude": ["node_modules", "dist/"]
}
